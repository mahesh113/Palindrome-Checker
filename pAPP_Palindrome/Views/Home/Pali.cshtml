
@{
    ViewBag.Title = "Pali";
}
<script src="/Scripts/angPalin.js"></script>
<h2>Check if a string/sentence is a Palindrome.</h2>


<div class="container" ng-app="myApp" >
    <div  ng-controller="myCtrl">
        <form ng-submit="onSubmit()">


            <div class="form-label-group">
                <input type="text" ng-model="txtString" class="form-control" placeholder="Type here..." required autofocus>
                
            </div>
            <div>
                <input type="checkbox" ng-model="icase" />  Ignore Case.
            </div>
            <br /><br /><br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
            <div ng-if="result=='yes'"><span class="glyphicon glyphicon-ok"></span> {{myTxt}}</div>
            <div ng-if="result=='no'"><span class="glyphicon glyphicon-remove"></span> {{myTxt}}</div>

            <div ng-if="dbresult=='success'" class="alert alert-success">
                <strong>Success!</strong> Database update done!.
            </div>

            <div ng-if="dberror" class="alert alert-danger">
                <strong>Fail!</strong> {{dberror}}.
            </div>
        </form>
    </div>
</div>
